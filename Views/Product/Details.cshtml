                                <td>@item.Stone</td>

                            </tr>
                            <tr>
                                <td>Diasmond</td>
                                <td>@item.DimTPye</td>

                            </tr>
                            <tr>
                                <td>Diamond car</td>
                                <td>@item.DimCrt</td>

                            </tr>
                            <tr>
                                <td>Gold Weight</td>
                                <td>@item.Net_Gold</td>

                            </tr>
                            <tr>
                                <td>Amount Of Gold In Item</td>
                                <td>@item.Product_Weight</td>

                            </tr>
